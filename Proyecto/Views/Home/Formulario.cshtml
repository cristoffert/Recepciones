@{
    ViewData["Title"] = "Formulario";
}

@using (@Html.BeginForm("Guardar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <div class="signup-form-container">

        <form role="form" id="register-form" autocomplete="off">

            <div class="form-header">
                <h3 class="form-title"><i class="fa fa-user"></i>Registro Clientes</h3>
                <br>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("rut", null, new { @class = "form-control", placeholder = "Ingresar Rut" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("nombre", null, new { @class = "form-control", placeholder = "Ingresar Nombre" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("apellido", null, new { @class = "form-control", placeholder = "Ingresar Apellido" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("ciudad", null, new { @class = "form-control", placeholder = "Ingresar Ciudad" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-earphone"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("telefono", null, new { @class = "form-control", placeholder = "Ingresar Telefono" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-tree-conifer"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("predio", null, new { @class = "form-control", placeholder = "Ingresar Predio" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("direccion", null, new { @class = "form-control", placeholder = "Ingresar Direccion" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Ingresar Email" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-align-justify"></span></div>
                    <span class="col-md-6">
                        @Html.DropDownList("tipo", new List<SelectListItem>
                   {
                       new SelectListItem{Text="Ingrese Tipo", Value=" - "},
                       new SelectListItem{Text="Planta", Value="Planta"},
                       new SelectListItem{Text="Clientes Varios", Value="ClientesVarios"},
                       new SelectListItem{Text="Quesera", Value="Quesera"}

                   },
                   new { @class = "form-control" }
                   )
                    </span>
                </div>
            </div>

            <div class="row">

                <div class="form-footer">
                    <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-log-in"></span> Guardar Cliente
                    </button>
                </div>


        </form>

    </div>


}