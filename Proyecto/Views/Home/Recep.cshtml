@model Proyecto.Models.Ingreso
@{
    ViewData["Title"] = "Recep";
}
@using (@Html.BeginForm("GuardarIngreso", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <div class="signup-form-container">

        <form role="form" id="register-form" autocomplete="off">

            <div class="form-header">
                <h3 class="form-title"><i class="fa fa-user"></i>Ingreso de Muestras</h3>
                <br>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("rut", null, new { @class = "form-control", placeholder = "Ingresar Rut" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("nombre", null, new { @class = "form-control", placeholder = "Ingresar Nombre" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("apellido", null, new { @class = "form-control", placeholder = "Ingresar Apellido" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-th"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("cantidad", null, new { @class = "form-control", placeholder = "Ingresar Cantidad" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-align-justify"></span></div>
                    <span class="col-md-6">
                        @Html.DropDownList("analisis", new List<SelectListItem>
                   {
                       new SelectListItem{Text="Ingrese Tipo", Value=" - "},
                       new SelectListItem{Text="RCS", Value="R"},
                       new SelectListItem{Text="Grasa", Value="G"},
                       new SelectListItem{Text="Proteina", Value="P"},
                       new SelectListItem{Text="Urea", Value="U"},
                       new SelectListItem{Text="Densidad", Value="D"},
                       new SelectListItem{Text="Pto. Criocopia", Value="C"},
                       new SelectListItem{Text="UFC", Value="UFC"},
                       new SelectListItem{Text="RCS, Grasa", Value="RG"},
                       new SelectListItem{Text="RCS, Grasa, Proteina", Value="RGP"},
                       new SelectListItem{Text="RCS, Grasa, Proteina, Urea", Value="RGPU"},
                       new SelectListItem{Text="RCS, Grasa, Proteina, Urea, Densidad", Value="RGPD"},
                       new SelectListItem{Text="RCS, Grasa, Proteina, Urea, Densidad, Crioscopia", Value="RGPDC"},
                       new SelectListItem{Text="Grasa, Proteina", Value="GP"},
                       new SelectListItem{Text="Grasa, Proteina, Urea", Value="GPU"},
                       new SelectListItem{Text="Grasa, Proteina, Urea, Densidad", Value="GPUD"},
                       new SelectListItem{Text="Grasa, Proteina, Urea, Densidad, Crioscopìa", Value="GPUDC"},
                       new SelectListItem{Text="RCS, Proteina", Value="RP"},
                       new SelectListItem{Text="RCS, Proteina, Urea", Value="RPU"},
                       new SelectListItem{Text="RCS, Proteina, Urea, Densidad", Value="RPUD"},
                       new SelectListItem{Text="RCS, Proteina, Urea, Densidad, Crioscopia", Value="RPUDC"},
                       new SelectListItem{Text="Proteina, Urea", Value="PU"},
                       new SelectListItem{Text="Proteina, Urea, Densidad", Value="PUD"},
                       new SelectListItem{Text="Proteina, Urea, Densidad, Crioscopia", Value="PUDC"},
                       new SelectListItem{Text="RCS, Urea", Value="RU"},
                       new SelectListItem{Text="RCS, Urea, Densidad", Value="RUD"},
                       new SelectListItem{Text="RCS, Urea, Densidad, Crioscopia", Value="RUDC"},
                       new SelectListItem{Text="Urea, Densidad", Value="UD"},
                       new SelectListItem{Text="Urea, Densidad, Crioscopia", Value="UDC"},
                       new SelectListItem{Text="RCS, Densidad", Value="RD"},
                       new SelectListItem{Text="RCS, Densidad, Crioscopia", Value="RDC"},
                       new SelectListItem{Text="Densidad, Crioscopia", Value="DC"},
                       new SelectListItem{Text="RCS, Crioscopia", Value="RC"}

                   },
                   new { @class = "form-control" }
                   )
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("envio", null, new { @class = "form-control", placeholder = "Ingresar Fecha de envio" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("muestreo", null, new { @class = "form-control", placeholder = "Ingresar Fecha de Muestreo" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>
         

                <div class="form-footer">
                    <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-log-in"></span> Guardar Ingreso
                    </button>
                </div>


        </form>

    </div>


}